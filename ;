<!DOCTYPE html>
<html>
<head>
	<title>redirect</title>
	<style>
		html, body {
			padding: 0; margin: 0;
			width: 100%; height: 100%;
			overflow: hidden;
			background-color: black;
		}
		#page {
		}
		#offline {
			position: absolute;
			max-height: 100%;
			max-width: 100%;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			margin: 0;
			padding: 0;
		}
		#notification {
			position: absolute;
			bottom: 0;
			right: 0;
			color: red;
			font-size: 5px;
			font-style: italic;
			margin: 10px;
		}
	</style>
</head>
<body>
	<iframe id="page" src="https://rpbritton.github.io/kiosk/pages/fhs-kiosk.html" frameborder="0" scrolling="no" width="100%" height="100%" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>
	<img id="offline" src="offline.png">
	<h4 id="notification"></h4>
</body>
<script>
	// Time to refresh (minutes)
	var refreshTime = 30;

	// Returns a promise on successfully contacting my github.
	function checkOnline() {
		return new Promise(function(resolve, reject) {
			var xhr = new XMLHttpRequest();

			xhr.onreadystatechange = function() {
				if (xhr.readyState == 4) {
					if (xhr.status == 200) {
						resolve();
					}
					else {

						reject();
					}
				}
			}
			xhr.onerror = function() {
				reject();
			}

			xhr.open("HEAD", "https://rpbritton.github.io", true);
			xhr.send();
		});
	}

	// Reloads when internet connection is confirmed.
	var numReloadAttempts = 0;
	function tryToReload() {
		numReloadAttempts++;
		document.getElementById("notification").innerHTML = "Attempting Refresh " +numReloadAttempts;

		checkOnline().then(function() {
			location.reload();
		}).catch(function() {
			tryToReload();
		});
	};

	// Auto refresh
	setTimeout(function() {
		tryToReload();
	}, refreshTime * 60 * 1000);

	// Refresh if not loaded
	checkOnline().then(function() {
		document.getElementById("offline").style.display = "none";
	}).catch(function() {
		tryToReload();
	});
</script>
</html>
